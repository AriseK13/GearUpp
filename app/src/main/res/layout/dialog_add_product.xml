<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/et_product_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Product Name" />

    <EditText
        android:id="@+id/et_product_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Product Price"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/et_product_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Product Description" />

    <EditText
        android:id="@+id/et_product_quantity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Product Quantity"
        android:inputType="number" />

    <Spinner
        android:id="@+id/spinner_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!-- Image Selection for three images -->
    <Button
        android:id="@+id/btn_choose_image1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose Image 1" />

    <ImageView
        android:id="@+id/iv_product_image1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:visibility="gone" />

    <Button
        android:id="@+id/btn_choose_image2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose Image 2" />

    <ImageView
        android:id="@+id/iv_product_image2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:visibility="gone" />

    <Button
        android:id="@+id/btn_choose_image3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose Image 3" />

    <ImageView
        android:id="@+id/iv_product_image3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:visibility="gone" />

    <Button
        android:id="@+id/btn_add_product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Product"
        android:layout_gravity="center" />
</LinearLayout>
