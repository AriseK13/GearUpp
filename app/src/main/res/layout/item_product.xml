<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <ImageView
        android:id="@+id/iv_product_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:contentDescription="@string/product_image_desc"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/tv_product_name_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Product: "
        android:textSize="16sp"
        android:layout_toEndOf="@id/iv_product_image"
        android:layout_marginStart="8dp"
        android:layout_alignParentTop="true"/>

    <TextView
        android:id="@+id/tv_product_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_toRightOf="@+id/tv_product_name_label"/>


    <TextView
        android:id="@+id/tv_product_price_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price: "
        android:textSize="14sp"
        android:layout_below="@id/tv_product_name"
        android:layout_toEndOf="@id/iv_product_image"
        android:layout_marginStart="8dp"/>

    <TextView
        android:id="@+id/tv_product_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_below="@+id/tv_product_name"
        android:layout_toRightOf="@+id/tv_product_price_label"/>


    <TextView
        android:id="@+id/tv_product_description_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description: "
        android:textSize="12sp"
        android:layout_below="@id/tv_product_price"
        android:layout_toEndOf="@id/iv_product_image"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"/>

    <TextView
        android:id="@+id/tv_product_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:layout_marginTop="4dp"
        android:layout_below="@+id/tv_product_price"
        android:layout_toRightOf="@+id/tv_product_description_label"/>

</RelativeLayout>
