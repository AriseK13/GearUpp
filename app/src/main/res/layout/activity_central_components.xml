<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/viewpager_background"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Adding a CardView to give a modern touch with shadows and rounded corners -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:elevation="4dp"
        app:cardCornerRadius="16dp"
        app:cardBackgroundColor="@color/platitum">

        <!-- RecyclerView for displaying central components -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_central_components"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:padding="8dp" />
    </androidx.cardview.widget.CardView>

</LinearLayout>
